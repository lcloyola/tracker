= link_to 'Edit', edit_group_path(@group)
\|
= link_to 'Back', groups_path
\|
-if @group.in
  = link_to 'Logout', toggle_group_path(@group)
-else
  = link_to 'Login', toggle_group_path(@group)

%p#notice= notice

%h1= @group.name
%p
  %b Details:
  = @group.details
%p
  %b Status:
  - if @group.in
    IN
  - else
    OUT
    %br
    %b Remarks
    =@group.remarks
  
%hr
%h2 Units in this Group
%table
  %tr
    %th Unit ID
    %th Details
    %th Status
    %th Remarks
  - @group.units.each do |unit|
    %tr
      %td= unit.id
      %td= unit.details
      -if unit.in
        %td IN
        %td n/a
      -else 
        %td OUT
        %td= unit.remarks

%hr
%h2 Edit Units
%table
  %tr
    %th Unit ID
    %th Details
    %th Status
    %th Action
  - @units.each do |unit|
    %tr
      %td= unit.id
      %td= unit.details
      %td
        -if unit.in
          IN
        -else 
          OUT
      - unless @group.unit?( unit.id )
        %td= link_to 'Add', join_group_path(@group.id, unit.id)
      - else
        %td= link_to 'Remove', join_group_path(@group.id, unit.id)
